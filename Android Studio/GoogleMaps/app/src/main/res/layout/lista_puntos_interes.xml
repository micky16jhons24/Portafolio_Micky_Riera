<?xml version="1.0" encoding="utf-8"?>
<!-- Declara la versión del archivo XML y su codificación (UTF-8). -->


<!-- Declara el espacio de nombres XML para los atributos estándar de Android. -->
<!-- Establece que el ancho del CardView debe ocupar todo el ancho del contenedor padre. -->
<!-- Establece que la altura del CardView debe ajustarse al contenido dentro de él. -->
<!-- Añade un margen de 8dp alrededor del CardView para separarlo de otros elementos. -->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="16dp">
    <!-- Añade un relleno de 16dp dentro del CardView, separando el contenido del borde del CardView. -->

    <!-- LinearLayout que organiza el contenido de manera vertical. -->
    <!-- Establece que el ancho del LinearLayout debe ocupar todo el ancho del contenedor padre. -->
    <!-- Establece que la altura del LinearLayout debe ajustarse al contenido dentro de él. -->
    <!-- Define que los elementos dentro del LinearLayout deben organizarse verticalmente. -->


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- TextView para mostrar el nombre del punto de interés -->
        <!-- Asigna un identificador único para este TextView. -->
        <!-- Establece que el ancho del TextView debe ajustarse al tamaño del texto. -->
        <!-- Establece que la altura del TextView debe ajustarse al tamaño del texto. -->
        <!-- Establece el texto que se mostrará en el TextView. -->
        <!-- Establece el tamaño del texto a 16sp (escala para diferentes resoluciones de pantalla). -->
        <!-- Establece el estilo del texto en negrita. -->

        <TextView
    android:id="@+id/tvPoint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Point of Interest"
    android:textSize="16sp"
    android:textStyle="bold"
    android:textColor="@android:color/black" />
    <!-- Establece el color del texto a negro. -->

    <!-- TextView para mostrar la descripción del punto de interés -->
    <TextView
    android:id="@+id/tvDescription"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Description"
    android:textSize="14sp"
    android:layout_marginTop="4dp" />
    <!-- Establece el texto y un margen superior de 4dp para separar este TextView del anterior. -->

    <!-- TextView para mostrar el horario del punto de interés -->
    <TextView
    android:id="@+id/tvSchedule"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Schedule"
    android:textSize="14sp"
    android:layout_marginTop="4dp" />
    <!-- Establece el texto y un margen superior de 4dp para separar este TextView del anterior. -->

    <!-- ImageView para mostrar la imagen relacionada con el punto de interés -->
        <!-- Establece que el ancho de la imagen debe ocupar todo el ancho del contenedor padre. -->
        <!-- Establece la altura de la imagen a 150dp. -->
        <!-- Añade un margen superior de 8dp para separar la imagen de los elementos superiores. -->
        <!-- Define cómo la imagen debe ser escalada dentro de su contenedor (centrada y recortada si es necesario). -->
        <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />
    <!-- Establece la imagen predeterminada que se mostrará (en este caso un drawable de ejemplo). -->

    <!-- Botón para mostrar el punto de interés en el mapa -->

<Button
android:id="@+id/btnShowOnMap"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Mostrar en el mapa"
android:layout_marginTop="8dp" />
    <!-- Establece el texto del botón y un margen superior de 8dp. -->

    <!-- Botón para agregar el punto de interés a los favoritos -->
        <!-- Añade un margen superior de 8dp para separar el botón de los elementos anteriores. -->

        <Button
        android:id="@+id/btnAddToFavorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar a favoritos"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal" />
    <!-- Centra el botón horizontalmente dentro de su contenedor. -->

    </LinearLayout>
    <!-- Cierra el LinearLayout que organiza todos los elementos de manera vertical. -->

    </androidx.cardview.widget.CardView>
    <!-- Cierra el CardView, que es el contenedor principal de todos los elementos dentro de él. -->
